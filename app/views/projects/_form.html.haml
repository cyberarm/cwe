= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :app
    = f.text_area :app
  .field
    = f.label :help
    = f.text_area :help
  .field
    = f.label :requester
    = f.text_field :requester
  .field
    = f.label :site
    = f.text_field :site
  .actions
    = f.submit 'Save'
